@model MVC___MSSQL_Classifieds_Portal.Models.ViewModels.ListingFilterViewModel

@{
    ViewData["Title"] = "Listings";
}

<h1>Listings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Create New Listing</a>
</p>

<!-- Filter Form -->
<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Search & Filter</h5>
        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-md-3">
                <input type="text" name="searchTitle" class="form-control" placeholder="Search by title"
                    value="@Model.SearchTitle" />
            </div>

            <div class="col-md-2">
                <select name="categoryId" class="form-select" onchange="this.form.submit();">
                    @{
                        var cats = Model.Categories.OrderBy(c => c.Name).ToList();
                        var selected = Model.CategoryId ?? 0;
                    }
                    <option value="">All Categories</option>
                    @foreach (var cat in cats)
                    {
                        if (selected == cat.Id)
                        {
                            <option value="@cat.Id" selected>@cat.Name</option>
                        }
                        else
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-2">
                <input type="number" name="minPrice" class="form-control" placeholder="Min Price" step="0.01"
                    value="@Model.MinPrice" />
            </div>

            <div class="col-md-2">
                <input type="number" name="maxPrice" class="form-control" placeholder="Max Price" step="0.01"
                    value="@Model.MaxPrice" />
            </div>

            <div class="col-md-2">
                <select name="sortBy" class="form-select">
                    <option value="newest" selected="@(Model.SortBy == "newest" ? "selected" : "")">Newest First</option>
                    <option value="price_asc" selected="@(Model.SortBy == "price_asc" ? "selected" : "")">Price: Low to High</option>
                    <option value="price_desc" selected="@(Model.SortBy == "price_desc" ? "selected" : "")">Price: High to Low</option>
                </select>
            </div>

            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

<!-- Results Summary -->
<div class="alert alert-info">
    Found <strong>@Model.TotalListings</strong> listing(s)
</div>

<!-- Listings Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Category</th>
            <th>Owner</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Listings.Any())
        {
            @foreach (var item in Model.Listings)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.Username)</td>
                    <td>@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No listings found</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Links -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Previous Page -->
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" 
                    asp-action="Index" 
                    asp-route-searchTitle="@Model.SearchTitle"
                    asp-route-categoryId="@Model.CategoryId"
                    asp-route-minPrice="@Model.MinPrice"
                    asp-route-maxPrice="@Model.MaxPrice"
                    asp-route-sortBy="@Model.SortBy"
                    asp-route-page="@(Model.CurrentPage - 1)">
                    Previous
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" 
                        asp-action="Index"
                        asp-route-searchTitle="@Model.SearchTitle"
                        asp-route-categoryId="@Model.CategoryId"
                        asp-route-minPrice="@Model.MinPrice"
                        asp-route-maxPrice="@Model.MaxPrice"
                        asp-route-sortBy="@Model.SortBy"
                        asp-route-page="@i">
                        @i
                    </a>
                </li>
            }

            <!-- Next Page -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                    asp-action="Index"
                    asp-route-searchTitle="@Model.SearchTitle"
                    asp-route-categoryId="@Model.CategoryId"
                    asp-route-minPrice="@Model.MinPrice"
                    asp-route-maxPrice="@Model.MaxPrice"
                    asp-route-sortBy="@Model.SortBy"
                    asp-route-page="@(Model.CurrentPage + 1)">
                    Next
                </a>
            </li>
        </ul>
    </nav>
}