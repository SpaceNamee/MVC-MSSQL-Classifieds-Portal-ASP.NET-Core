@model MVC___MSSQL_Classifieds_Portal.Models.ViewModels.ListingFilterViewModel

@{
    ViewData["Title"] = "Listings";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">🛍️ All Listings</h1>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Create New Listing
        </a>
    }
    else
    {
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
            Login to Post
        </a>
    }
</div>

<!-- Filter Form -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">🔍 Search & Filter</h5>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-md-3">
                <input type="text" name="searchTitle" class="form-control" placeholder="Search by title"
                    value="@Model.SearchTitle" />
            </div>

            <div class="col-md-2">
                <select name="categoryId" class="form-select" onchange="this.form.submit();">
                    @{
                        var cats = Model.Categories.OrderBy(c => c.Name).ToList();
                        var selected = Model.CategoryId ?? 0;
                    }
                    <option value="">All Categories</option>
                    @foreach (var cat in cats)
                    {
                        if (selected == cat.Id)
                        {
                            <option value="@cat.Id" selected>@cat.Name</option>
                        }
                        else
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-2">
                <input type="number" name="minPrice" class="form-control" placeholder="Min Price" step="0.01"
                    value="@Model.MinPrice" />
            </div>

            <div class="col-md-2">
                <input type="number" name="maxPrice" class="form-control" placeholder="Max Price" step="0.01"
                    value="@Model.MaxPrice" />
            </div>

            <div class="col-md-2">
                <select name="sortBy" class="form-select">
                    <option value="newest" selected="@(Model.SortBy == "newest" ? "selected" : "")">Newest First</option>
                    <option value="price_asc" selected="@(Model.SortBy == "price_asc" ? "selected" : "")">Price: Low to High</option>
                    <option value="price_desc" selected="@(Model.SortBy == "price_desc" ? "selected" : "")">Price: High to Low</option>
                </select>
            </div>

            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

<!-- Results Summary -->
<div class="alert alert-info d-flex justify-content-between align-items-center">
    <span>Found <strong>@Model.TotalListings</strong> listing(s)</span>
    <span class="badge bg-primary">Page @Model.CurrentPage of @Model.TotalPages</span>
</div>

<!-- Listings Grid View -->
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
    @if (Model.Listings.Any())
    {
        @foreach (var item in Model.Listings)
        {
            <div class="col">
                <div class="card h-100 shadow-sm hover-shadow">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" 
                             style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center text-muted" 
                             style="height: 200px; font-size: 3rem;">
                            📦
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title text-truncate" title="@item.Title">@item.Title</h5>
                        <p class="card-text text-muted small mb-2">
                            <span class="badge bg-secondary">@item.Category.Name</span>
                        </p>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="h4 text-success mb-0">@item.Price.ToString("C")</span>
                        </div>
                        <p class="card-text small text-muted">
                            <i class="bi bi-person"></i> @item.User.Username<br>
                            <i class="bi bi-calendar"></i> @item.CreatedAt.ToString("MMM dd, yyyy")
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary flex-fill">View</a>
                            @if (User.Identity?.IsAuthenticated == true && User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == item.UserId.ToString())
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="text-center py-5">
                <div style="font-size: 5rem; opacity: 0.3;">📭</div>
                <h3 class="text-muted">No listings found</h3>
                <p class="text-muted">Try adjusting your search filters</p>
            </div>
        </div>
    }
</div>

<!-- Pagination Links -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Previous Page -->
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" 
                    asp-action="Index" 
                    asp-route-searchTitle="@Model.SearchTitle"
                    asp-route-categoryId="@Model.CategoryId"
                    asp-route-minPrice="@Model.MinPrice"
                    asp-route-maxPrice="@Model.MaxPrice"
                    asp-route-sortBy="@Model.SortBy"
                    asp-route-page="@(Model.CurrentPage - 1)">
                    Previous
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" 
                        asp-action="Index"
                        asp-route-searchTitle="@Model.SearchTitle"
                        asp-route-categoryId="@Model.CategoryId"
                        asp-route-minPrice="@Model.MinPrice"
                        asp-route-maxPrice="@Model.MaxPrice"
                        asp-route-sortBy="@Model.SortBy"
                        asp-route-page="@i">
                        @i
                    </a>
                </li>
            }

            <!-- Next Page -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                    asp-action="Index"
                    asp-route-searchTitle="@Model.SearchTitle"
                    asp-route-categoryId="@Model.CategoryId"
                    asp-route-minPrice="@Model.MinPrice"
                    asp-route-maxPrice="@Model.MaxPrice"
                    asp-route-sortBy="@Model.SortBy"
                    asp-route-page="@(Model.CurrentPage + 1)">
                    Next
                </a>
            </li>
        </ul>
    </nav>
}