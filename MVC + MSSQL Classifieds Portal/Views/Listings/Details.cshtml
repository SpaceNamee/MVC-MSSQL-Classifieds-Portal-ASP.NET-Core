@model MVC___MSSQL_Classifieds_Portal.Models.Listing

@{
    ViewData["Title"] = "Listing Details";
}

<h1>@Model.Title</h1>

<div class="card">
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid mb-3" style="max-height: 300px;" />
        }
        
        <dl class="row">
            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
            
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>
            
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(Model.Description ?? "No description")</dd>
            
            <dt class="col-sm-3">Owner</dt>
            <dd class="col-sm-9">@Model.User?.Username</dd>
            
            <dt class="col-sm-3">Posted</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>