@model IEnumerable<MVC___MSSQL_Classifieds_Portal.Models.User>

@{
    ViewData["Title"] = "Registered Users";
}

<h1>Registered Users</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Create New User</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Status</th>
                <th>Listings</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td><strong>@user.Username</strong></td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>@(user.Listings?.Count() ?? 0)</td>
                        <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">View</a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No users registered yet.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
