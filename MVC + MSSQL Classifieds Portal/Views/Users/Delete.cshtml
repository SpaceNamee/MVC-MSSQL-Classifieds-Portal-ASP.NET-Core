@model MVC___MSSQL_Classifieds_Portal.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Are you sure?</h4>
    <p>
        This will deactivate the user <strong>@Model.Username</strong> and all their listings.
        This action cannot be undone.
    </p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Username</dt>
                    <dd class="col-sm-8">@Model.Username</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Listings</dt>
                    <dd class="col-sm-8">@(Model.Listings?.Count() ?? 0)</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete User</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
