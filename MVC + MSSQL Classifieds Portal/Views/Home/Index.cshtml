@model MVC___MSSQL_Classifieds_Portal.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Classifieds Portal - Home";
}

<div class="container">
    <!-- Hero Section -->
    <div class="text-center py-5 bg-light rounded-3 mb-4">
        <h1 class="display-4">🏪 Classifieds Portal</h1>
        <p class="lead text-muted">Buy and sell anything - Electronics, Furniture, and more!</p>
        <a asp-controller="Listings" asp-action="Create" class="btn btn-primary btn-lg">
            + Post New Listing
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <h2 class="card-title text-primary">@Model.TotalListings</h2>
                    <p class="card-text">Active Listings</p>
                    <a asp-controller="Listings" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        View All
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-success">
                <div class="card-body">
                    <h2 class="card-title text-success">@Model.TotalCategories</h2>
                    <p class="card-text">Categories</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-success btn-sm">
                        Browse
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-info">
                <div class="card-body">
                    <h2 class="card-title text-info">@Model.TotalUsers</h2>
                    <p class="card-text">Registered Users</p>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-outline-info btn-sm">
                        View All
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Listings -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">📋 Recent Listings</h5>
                    <a asp-controller="Listings" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                        See All →
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.RecentListings.Any())
                    {
                        <div class="row">
                            @foreach (var listing in Model.RecentListings)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card h-100">
                                        @if (!string.IsNullOrEmpty(listing.ImageUrl))
                                        {
                                            <img src="@listing.ImageUrl" class="card-img-top" alt="@listing.Title" 
                                                 style="height: 150px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" 
                                                 style="height: 150px;">
                                                <span class="text-white">No Image</span>
                                            </div>
                                        }
                                        <div class="card-body">
                                            <h6 class="card-title">@listing.Title</h6>
                                            <p class="card-text">
                                                <span class="badge bg-secondary">@listing.Category?.Name</span>
                                                <strong class="text-success float-end">@listing.Price.ToString("C")</strong>
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <small class="text-muted">
                                                By @listing.User?.Username • @listing.CreatedAt.ToString("MMM dd")
                                            </small>
                                            <a asp-controller="Listings" asp-action="Details" asp-route-id="@listing.Id" 
                                               class="btn btn-sm btn-primary float-end">View</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No listings yet. Be the first to post!</p>
                            <a asp-controller="Listings" asp-action="Create" class="btn btn-primary">
                                Create First Listing
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Quick Links -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">📁 Browse by Category</h5>
                </div>
                <div class="card-body">
                    @if (Model.Categories.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var category in Model.Categories)
                            {
                                <a asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id" 
                                   class="btn btn-outline-secondary">
                                    @category.Name
                                    <span class="badge bg-primary">@category.Listings.Count</span>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No categories available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>