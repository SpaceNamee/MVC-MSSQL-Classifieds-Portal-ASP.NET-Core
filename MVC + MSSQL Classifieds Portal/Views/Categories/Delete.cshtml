@model MVC___MSSQL_Classifieds_Portal.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this category?</h4>
    <p>This action cannot be undone.</p>
</div>

@if (Model.Listings != null && Model.Listings.Any())
{
    <div class="alert alert-danger">
        <strong>⚠️ Warning!</strong> This category has <strong>@Model.Listings.Count</strong> listing(s). 
        You cannot delete a category with existing listings.
    </div>
}

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(Model.Description ?? "No description")</dd>
            
            <dt class="col-sm-3">Listings</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info">@(Model.Listings?.Count ?? 0)</span>
            </dd>
            
            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    
    @if (Model.Listings != null && Model.Listings.Any())
    {
        <button type="submit" class="btn btn-danger" disabled>Cannot Delete</button>
    }
    else
    {
        <button type="submit" class="btn btn-danger">Delete</button>
    }
    
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>